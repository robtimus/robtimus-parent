<ruleset comparisonMethod="maven"
         xmlns="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0 http://mojohaus.org/versions-maven-plugin/xsd/rule-2.0.0.xsd">

  <rules>
    <rule comparisonMethod="maven" groupId="org.apache.maven.plugins">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-M\d+</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule comparisonMethod="maven" groupId="commons-collections" artifactId="commons-collections">
      <ignoreVersions>
        <!-- Ignore versions using dates -->
        <ignoreVersion type="regex">200[34]\d{4}.*</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule comparisonMethod="maven" groupId="com.fasterxml.jackson.core">
      <ignoreVersions>
        <ignoreVersion type="regex">.*.rc\d+</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule comparisonMethod="maven" groupId="org.slf4j">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-alpha\d+</ignoreVersion>
        <ignoreVersion type="regex">.*-beta\d+</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule comparisonMethod="maven" groupId="ch.qos.logback">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-alpha\d+</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule comparisonMethod="maven" groupId="org.junit.jupiter">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-M\d+</ignoreVersion>
        <ignoreVersion type="regex">.*-RC\d+</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule comparisonMethod="maven" groupId="org.junit.vintage">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-M\d+</ignoreVersion>
        <ignoreVersion type="regex">.*-RC\d+</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule comparisonMethod="maven" groupId="org.mockito">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-beta</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule comparisonMethod="maven" groupId="org.postgresql" artifactId="postgresql">
      <ignoreVersions>
        <!-- Ignore versions for older JREs -->
        <ignoreVersion type="regex">.*.jre6</ignoreVersion>
        <ignoreVersion type="regex">.*.jre7</ignoreVersion>
      </ignoreVersions>
    </rule>
  </rules>
</ruleset>
